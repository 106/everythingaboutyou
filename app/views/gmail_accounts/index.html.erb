<h1>Listing gmail_accounts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Username</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gmail_accounts.each do |gmail_account| %>
  <tr>
    <td><%= gmail_account.user_id %></td>
    <td><%= gmail_account.username %></td>
    <td><%= gmail_account.password %></td>
    <td><%= link_to 'Show', gmail_account %></td>
    <td><%= link_to 'Edit', edit_gmail_account_path(gmail_account) %></td>
    <td><%= link_to 'Destroy', gmail_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

